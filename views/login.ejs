    <div class="login-content">
        <div class="login-title">
            登录
        </div>
        <form method="post" action="login/login_submit">
            <div class="user-name">
                <span class="txt">
                    User:
                </span>
                <span class="ipt">
                    <input type="text" id="username" name="username" placeholder="用户名">
                </span>
            </div>
            <div class="pass-word">
